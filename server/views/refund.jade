extends layout

block content
    h3=title
    div.table-responsive
        form(action='refund', method='POST')
            div.form-group
                label Mã giao dịch (vnp_TxnRef):
                div
                input.form-control(name='orderId',style='border: 1px solid #ccc; padding: 10px; font-size: 16px;;outline:none')
            div.form-group
                label Số tiền hoàn:
                div
                input.form-control(name='amount',style='border: 1px solid #ccc; padding: 10px; font-size: 16px;;outline:none')
            div.form-group
                label Kiểu hoàn tiền (vnp_TransactionType):
                select.form-control(name='transType',style='border: 1px solid #ccc; padding: 10px; font-size: 16px;;outline:none')
                    option(value='02') Hoàn toàn phần
                    option(value='03') Hoàn một phần
            div.form-group
                label Thời gian tạo giao dịch (vnp_TransactionDate)
                div
                input.form-control(name='transDate', placeholder='yyyyMMddHHmmss',style='border: 1px solid #ccc; padding: 10px; font-size: 16px;;outline:none')
            div.form-group
                label User thực hiện hoàn (vnp_CreateBy)
                div
                input.form-control(name='user',style='border: 1px solid #ccc; padding: 10px; font-size: 16px;;outline:none')
            button.btn.btn-default(type='submit', style='background:cyan;border: 1px solid #ccc; padding: 10px; padding-left:25px;padding-right:25px;font-size: 15px;margin:25px') Refund
    p&nbsp;
